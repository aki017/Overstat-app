<Window x:Class="Overstat.View.DXGICaptureSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Overstat.View"
        mc:Ignorable="d"
        Title="DXGICaptureSettingWindow" Height="283" Width="300"
        Loaded="Window_Loaded" Closed="DXGICaptureSettingWindow_OnClosed">
  <Grid>
    <Image x:Name="image" HorizontalAlignment="Stretch" Height="153" Margin="10,89,10,0" VerticalAlignment="Stretch" Width="272" Stretch="UniformToFill"/>
    <ComboBox x:Name="AdaptorSelecter" HorizontalAlignment="Stretch" Margin="10,10,10,0" VerticalAlignment="Top" SelectionChanged="AdaptorSelecter_OnSelectionChanged"/>
    <ComboBox x:Name="OutputSelecter" HorizontalAlignment="Stretch" Margin="10,37,10,0" VerticalAlignment="Top" SelectionChanged="OutputSelecter_OnSelectionChanged"/>
    <Button x:Name="RefreshButton" Content="Refresh" HorizontalAlignment="Stretch" Margin="10,64,10,0" VerticalAlignment="Top" Click="RefreshButton_OnClick"/>
  </Grid>
</Window>
